@model IEnumerable<Basketball.Models.Game>


@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>
    @Html.ActionLink("Create New", "Create") <br />
    @Html.ActionLink("View Past Games", "Index", "PastGames")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourtFees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WhoPaid)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Date))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourtFees)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhoPaid)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GamesID }) |
                @Html.ActionLink("Details", "Details", new { id = item.GamesID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GamesID })
            </td>
        </tr>
    }

</table>
